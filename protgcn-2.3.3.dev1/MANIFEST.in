include LICENSE
include requirements.txt

# Include all Python source files
recursive-include gcndesign *.py

# Include model parameter files
include gcndesign/params/*.pkl

# Include scripts
recursive-include scripts *.py

# Include web interface files
include app.py
include templates/*.html
include static/*

# Include validation and utility scripts
include get_overall_validation_metrics.py
include quick_validation.py
include calculate_protein_design_metrics.py
